<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.predev.gymcrm.repository.TrainerMapper">
    <resultMap id="TrainerResultMap" type="com.predev.gymcrm.entity.Trainer">
        <id property="trainerId" column="trainer_id" />
        <result property="trainerName" column="trainer_name" />
        <result property="trainerUserName" column="trainer_username" />
        <result property="trainerPassword" column="trainer_password" />
        <result property="trainerPhone" column="trainer_phone" />
        <result property="trainerEmail" column="trainer_email" />
        <result property="trainerProfileImgUrl" column="trainer_profile_url" />
        <result property="createDate" column="create_date" />
        <result property="updateDate" column="update_date" />
    </resultMap>
    <resultMap id="RoleTrainerRegisterMap" type="com.predev.gymcrm.entity.RoleTrainerRegister">
        <id property="roleRegisterId" column="role_trainer_register_id" />
        <result property="roleId" column="role_id" />
        <result property="trainerId" column="trainer_id" />
        <result property="createDate" column="create_date" />
        <result property="updateDate" column="update_date" />
        <association property="role" resultMap="RoleResultMap" />
    </resultMap>
    <resultMap id="RoleResultMap" type="com.predev.gymcrm.entity.Role">
        <id property="roleId" column="role_id" />
        <result property="roleName" column="role_name" />
        <result property="roleNameKor" column="role_name_kor" />
        <result property="createDate" column="create_date" />
        <result property="updateDate" column="update_date" />
    </resultMap>
    <insert
        id="saveTrainer"
        parameterType="com.predev.gymcrm.entity.Trainer"
        keyProperty="trainerId"
        useGeneratedKeys="true"
    >
        insert into trainer_tb
        values(0, #{trainerName}, #{trainerPassword}, #{trainerName}, #{trainerEmail}, #{trainerPhone}, #{trainerProfileImgUrl}, now(), now())
    </insert>
    <select
            id="findTrainerByTrainerUsername"
            parameterType="string"
            resultType="com.predev.gymcrm.entity.Trainer"
            resultMap="TrainerResultMap"
    >
        select
            tt.trainer_id,
            tt.trainer_username,
            tt.trainer_password,
            tt.trainer_name,
            tt.trainer_phone,
            tt.trainer_email,
            tt.create_date,
            tt.update_date,
            rrt.role_trainer_register_id,
            rrt.role_id,
            rt.role_name,
            rt.role_name_kor
        from
            trainer_tb tt
            left outer join role_trainer_register_tb rrt on(rrt.trainer_id = tt.trainer_id)
            left outer join role_tb rt on(rt.role_id = rrt.role_id)
        where
            trainer_username = #{trainerUsername}
    </select>
</mapper>